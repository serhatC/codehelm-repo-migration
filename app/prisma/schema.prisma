
generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/repo_migration_app/app/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String       @id @default(cuid())
  name          String?
  email         String       @unique
  emailVerified DateTime?
  image         String?
  password      String?
  firstName     String?
  lastName      String?
  companyName   String?
  isPremium     Boolean      @default(false)
  accounts      Account[]
  sessions      Session[]
  migrations    Migration[]
  repositories  Repository[]
  settings      UserSettings?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Platform {
  GITHUB
  GITLAB
  BITBUCKET
}

enum MigrationStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
  PAUSED
  CANCELLED
}

enum MigrationType {
  CODE_ONLY
  WITH_TAGS
  WITH_PULL_REQUESTS
  FULL_MIRROR
  LFS_SUPPORT
}

model Repository {
  id          String         @id @default(cuid())
  name        String
  fullName    String
  url         String
  platform    Platform
  owner       String
  isPrivate   Boolean        @default(false)
  description String?
  language    String?
  stars       Int            @default(0)
  forks       Int            @default(0)
  size        Int            @default(0)
  userId      String
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  sourceMigrations Migration[] @relation("SourceRepository")
  targetMigrations Migration[] @relation("TargetRepository")
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@unique([userId, url])
}

model Migration {
  id               String        @id @default(cuid())
  title            String
  description      String?
  status           MigrationStatus @default(PENDING)
  type             MigrationType @default(CODE_ONLY)
  progress         Int           @default(0)
  sourceRepoId     String
  targetRepoId     String?
  sourcePlatform   Platform
  targetPlatform   Platform
  sourceUrl        String
  targetUrl        String?
  userId           String
  startedAt        DateTime?
  completedAt      DateTime?
  estimatedTime    Int?          // in minutes
  actualTime       Int?          // in minutes
  totalFiles       Int           @default(0)
  migratedFiles    Int           @default(0)
  totalSize        BigInt        @default(0)
  migratedSize     BigInt        @default(0)
  errorCount       Int           @default(0)
  warningCount     Int           @default(0)
  settings         Json?         // Migration specific settings
  user             User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  sourceRepository Repository    @relation("SourceRepository", fields: [sourceRepoId], references: [id])
  targetRepository Repository?   @relation("TargetRepository", fields: [targetRepoId], references: [id])
  logs             MigrationLog[]
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
}

enum LogLevel {
  INFO
  WARNING
  ERROR
  SUCCESS
}

model MigrationLog {
  id          String      @id @default(cuid())
  migrationId String
  level       LogLevel    @default(INFO)
  message     String
  details     String?     @db.Text
  component   String?     // Which part of migration (files, tags, PRs, etc.)
  timestamp   DateTime    @default(now())
  migration   Migration   @relation(fields: [migrationId], references: [id], onDelete: Cascade)
}

model UserSettings {
  id                    String   @id @default(cuid())
  userId                String   @unique
  theme                 String   @default("light")
  notifications         Boolean  @default(true)
  emailNotifications    Boolean  @default(true)
  autoRetryFailedMigrations Boolean @default(true)
  maxConcurrentMigrations Int    @default(3)
  preferredTargetPlatform Platform?
  defaultMigrationType    MigrationType @default(CODE_ONLY)
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}
